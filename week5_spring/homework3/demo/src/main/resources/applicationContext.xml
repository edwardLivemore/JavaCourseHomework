<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="school" class="com.example.demo.model.School">
        <property name="name" value="XXX市第一中学"/>
        <property name="klasses">
            <list>
                <ref bean="klass1"/>
                <ref bean="klass2"/>
            </list>
        </property>
    </bean>

    <bean id="klass1" class="com.example.demo.model.Klass">
        <property name="name" value="初三一班"/>
        <property name="students">
            <list>
                <ref bean="student1"/>
                <ref bean="student2"/>
            </list>
        </property>
    </bean>

    <bean id="klass2" class="com.example.demo.model.Klass">
        <property name="name" value="初三二班"/>
        <property name="students">
            <list>
                <ref bean="student3"/>
                <ref bean="student4"/>
                <ref bean="student5"/>
            </list>
        </property>
    </bean>

    <bean id="student1" class="com.example.demo.model.Student">
        <property name="name" value="张三"/>
        <property name="age" value="14"/>
    </bean>

    <bean id="student2" class="com.example.demo.model.Student">
        <property name="name" value="李四"/>
        <property name="age" value="15"/>
    </bean>

    <bean id="student3" class="com.example.demo.model.Student">
        <property name="name" value="王五"/>
        <property name="age" value="13"/>
    </bean>

    <bean id="student4" class="com.example.demo.model.Student">
        <property name="name" value="赵六"/>
        <property name="age" value="14"/>
    </bean>

    <bean id="student5" class="com.example.demo.model.Student">
        <property name="name" value="小罗"/>
        <property name="age" value="15"/>
    </bean>
</beans>